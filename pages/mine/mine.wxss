.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

/* 用户信息 */
.user-info {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  background: none;
  padding: 0;
  width: 100%;
  border: none;
  text-align: left;
}

.login-btn::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info-content {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.sign {
  font-size: 26rpx;
  color: #999;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 50%;
  background: #f0f0f0;
}

.stats-num {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能列表 */
.function-list {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.function-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-info {
  display: flex;
  align-items: center;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-title {
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 30rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
} 